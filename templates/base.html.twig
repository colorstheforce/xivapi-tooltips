        <hr>

        <button id="test" onclick="addMoar()">Add more tooltips</button>
        <div id="addmore"></div>

        <script>
        function addMoar()
        {
            let link = document.createElement('a');
            link.href = "http://xivdb.com/Item/1675";
            link.innerHTML = 'I am a new link';
            document.getElementById('addmore').appendChild(link);

            link = document.createElement('a');
            link.href = "http://xivdb.com/Item/1587";
            link.innerHTML = 'Hello World';
            document.getElementById('addmore').appendChild(link);

            // refresh tooltips
            XIVAPI.refreshTooltips();
        }
        </script>

    </body>
</html>
